<UserControl x:Class="PokerTell.PokerHand.Views.HandHistoriesTableView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="HandHistoryViewTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <StackPanel Orientation="Horizontal">
        
        <ContentControl 
            DataContext="{Binding CurrentHandHistory}"
            Template="{StaticResource HandHistoryViewTemplate}" />
        
        <ScrollBar Orientation="Vertical"
                   Value="{Binding SelectedIndex}"
                   SmallChange="1"
                   LargeChange="5"
                   Minimum="0"
                   Maximum="{Binding LastHandIndex}"
                   MouseWheel="ScrollBar_MouseWheel"
                   />
    </StackPanel>
</UserControl>
