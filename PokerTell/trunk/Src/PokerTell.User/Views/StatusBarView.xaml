<StatusBar x:Class="PokerTell.User.Views.StatusBarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         
    Background="Transparent"       
    >
    <StatusBar.Resources>
       
    </StatusBar.Resources>
    <WrapPanel>
        <Label Content="{Binding DatabaseStatus, Mode=OneWay}" />   
        
        <StackPanel DataContext="{Binding HandHistoriesDirectoryImportProgress}"
                    Visibility="{Binding Visible, Converter={StaticResource BoolToVisibleOrCollapsedConverter}}"
                    Margin="5"
                    >
            <Label Content="Importing Hand Histories"/>
           
                <ProgressBar Maximum="100"
                             Minimum="0"
                             Height="10"
                             Width="80" 
                             Value="{Binding PercentCompleted}"
                             />
         
        </StackPanel>
    </WrapPanel>
</StatusBar>

